@model Shop_thien_thanh.Models.SanPham

@{
    ViewBag.Title = "Xóa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section head{
    @Scripts.Render("~/bundles/jqueryval")
    }

<h2>@ViewBag.Title</h2>
    <hr/>
<h3>Bạn có chắc muốn xóa sản phẩm @Model.TenSanPham ?</h3>
<div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.SanPhamID" />
        <input type="hidden" name="page" value="@Request.QueryString["page"]" />
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" style="background:#c80209; color:#fff; "  /> |
            @Html.ActionLink("Không xóa", "Index", new { page = Request.QueryString["page"] }, null)
        </div>
    }
</div>
