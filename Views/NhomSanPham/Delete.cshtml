@model Shop_thien_thanh.Models.Nhomsp

@{
    ViewBag.Title = "Xóa Nhóm Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<h2>@ViewBag.Title </h2>
<hr/>
<h3>Bạn có chắc muốn xóa nhóm sản phẩm @Model.TenNhomsp?</h3>
<div>
  

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.NhomspID" />
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" style="background:#c80209; color:#fff; " /> |
            @Html.ActionLink("Không xóa", "Index")
        </div>
    }
</div>
